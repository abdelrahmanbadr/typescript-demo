{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2021",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*", "src/types/*"],
        "src/*": ["./src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  